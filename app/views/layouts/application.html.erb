<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= link_to "InstagramClone", user_path(current_user.id) %>
        <%= "名前 : #{current_user.name}" %>
        <%= link_to "プロフィール", user_path(current_user.id) %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "InstagramClone", new_session_path %>
        <%= link_to "ユーザー作成", new_user_path %>
        <%= link_to "ログイン", new_session_path %>
      <% end %>
    </header>
    <%= yield %>
    <li><%= link_to 'ユーザー一覧', users_path if logged_in? %></li>
  </body>
</html>
