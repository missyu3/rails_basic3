<strong>Title:</strong>
<%= @picture.title %><br>
<strong>Image:</strong>
<% if @picture.image? %>
  <%= image_tag @picture.image.url %><br>
<% end %>
<strong>Content:</strong>
<%= @picture.content %><br>
<% if current_user?(@picture.id) %>
  <%= link_to '更新', edit_picture_path(@picture) %><br>
<% else %>
  <% if current_user.favorite_pictures && current_user.favorite_pictures.find_by(id: @picture.id) %>
    <%= link_to "お気に入り削除",  favorite_path(@picture.favorites.first.id), method: :delete %><br>
  <% else %>
    <%= link_to "お気に入り",  favorites_path(picture_id: @picture.id), method: :post %><br>
  <% end %>
<% end %>
<%= link_to '戻る', pictures_path %>