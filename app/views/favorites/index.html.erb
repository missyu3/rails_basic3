<article>
  <h1><%= "#{@user.name}のお気に入り一覧" %></h1>
  <% @user.favorite_pictures.each do |f| %>
    <ul>
      <li><%= f.title %></li>
      <li><%= image_tag f.image.url%></li>
      <li><%= f.content %></li>
      <li><%= link_to f.user.name, user_path(f.user.id) %></li>
      <li><%= f.updated_at  %></li>
      <li><%= link_to "参照", picture_path(f.id) %></li>
    </ul>
  <% end %>
</article>